<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.atividadelogin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.DistracaoActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".activities.MapsActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activities.DownloadActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".activities.ListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ResultRegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ResultLoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.DATE_CHANGED" />
            </intent-filter>
        </activity>

        <service android:name=".service.MyService" />
        <service
            android:name=".service.MyJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>